<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="algorand_inline_form">
        <t t-set="inline_form_values"
           t-value="provider_sudo._algorand_get_inline_form_values(
                        amount,
                        currency,
                        partner_id,
                        mode == 'validation',
                        payment_method_sudo=pm_sudo,
                        sale_order_id=sale_order_id,
                    )"
        />
        <div name="o_algorand_element_container"
             t-att-data-algorand-inline-form-values="inline_form_values"
             class="algorand-payment-container"
        />
        <!-- Frontend logic moved to static asset js; container left minimal -->
    </template>

</odoo>