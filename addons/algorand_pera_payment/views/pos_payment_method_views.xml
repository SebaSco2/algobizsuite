<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend POS Payment Method Form to show Algorand Provider field -->
    <record id="pos_payment_method_view_form_algorand" model="ir.ui.view">
        <field name="name">pos.payment.method.form.algorand</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="algorand_provider_id" 
                       string="Algorand Provider"
                       help="Link this payment method to an Algorand payment provider for cryptocurrency payments"/>
            </field>
        </field>
    </record>
</odoo>
